{
	"name": "firebase-cloud-functions-trial",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"private": true,
	"type": "module",
	"engines": {
		"node": "20"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@firebaseextensions/fs-bq-schema-views": "^0.4.12",
		"@mdi/font": "^7.4.47",
		"@rushstack/eslint-patch": "^1.12.0",
		"@vitejs/plugin-vue": "^5.2.4",
		"@vue/eslint-config-prettier": "^9.0.0",
		"@vuepic/vue-datepicker": "^11.0.2",
		"camelcase-keys": "^9.1.3",
		"crypto-js": "^4.2.0",
		"eslint": "^8.57.1",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-import-resolver-custom-alias": "^1.3.2",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-vue": "^9.33.0",
		"eslint-plugin-vuetify": "^2.5.2",
		"firebase": "^11.10.0",
		"firebase-tools": "^14.12.1",
		"firebaseui": "^6.1.0",
		"license-checker": "^25.0.1",
		"lint-staged": "^16.1.5",
		"lodash": "^4.17.21",
		"luxon": "^3.7.1",
		"npm-check-updates": "^18.0.2",
		"pinia": "^3.0.3",
		"prettier": "^3.6.2",
		"sass": "^1.90.0",
		"simple-git-hooks": "^2.13.1",
		"snakecase-keys": "^8.1.0",
		"vite": "^7.3.1",
		"vite-plugin-eslint": "^1.8.1",
		"vite-plugin-node-polyfills": "^0.24.0",
		"vite-plugin-vuetify": "^2.1.2",
		"vue": "^3.5.18",
		"vue-i18n": "^11.1.11",
		"vue-router": "^4.5.1",
		"vuetify": "^3.9.5",
		"webfontloader": "^1.6.28"
	},
	"scripts": {
		"dev": "vite --mode localdev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "NODE_ENV=local firebase emulators:start",
		"firebase:host:preview": "firebase hosting:channel:deploy test_preview --expires 12h",
		"firebase:host:list": "firebase hosting:channel:list",
		"firebase:host:preview:delete": "firebase hosting:channel:delete test_preview",
		"firebase:host:disable": "firebase hosting:disable",
		"gen:schema:view:group_books": "npx @firebaseextensions/fs-bq-schema-views --non-interactive --project=fir-cloud-functions-trial --dataset=firestore_export --table-name-prefix=group_books --schema-files=./gen-schema-view/group_books.json",
		"pull:indexes": "firebase firestore:indexes > firestore.indexes.json",
		"deploy": "firebase deploy",
		"deploy:exclude:hosting": "firebase deploy --only functions,firestore,extensions",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
		"style": "prettier --ignore-unknown --write .",
		"ncu": "npm-check-updates",
		"prepare": "npx simple-git-hooks",
		"postinstall": "cd firebase-cloud-functions && yarn install"
	},
	"lint-staged": {
		"*": "npx prettier --ignore-unknown --write",
		"*.vue|*.js|*.cjs|*.mjs": "npx eslint --ignore-path .gitignore",
		"./yarn.lock": "npx license-checker --development --failOn \"GPL;AGPL;LGPL;NGPL\" --summary",
		"./functions/yarn.lock": "npx license-checker --start ./functions --production --failOn \"GPL;AGPL;LGPL;NGPL\" --summary"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged --verbose",
		"commit-msg": "npx commitlint -e"
	}
}
